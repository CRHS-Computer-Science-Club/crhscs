---
import Important from './Important.astro';

interface Props {
    title: string;
    cta: string;
    link: string;
    link_text: string;
}
const { title, cta, link, link_text } = Astro.props;
const target = link.startsWith('http') ? '_blank' : '_self';
---
<div class="actions">
    <h2>{title}</h2>
    <p>{cta}</p>
    <slot />
    <a href={link} target={target}>{link_text}</a>
</div>
<style>
    .actions {
		background-image: var(--card-gradient);
		border-radius: 0.5rem;
		padding: 1rem;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 0.2);
        text-align: center;
	}
    h2 {
        color: #fff;
    }
    a {
        text-decoration: underline dotted;
        color: #f09d9d;
    }
    a:hover {
        text-decoration: underline;
    }
</style>