---
interface Props {
    message: string;
}
const { message } = Astro.props;
---
<div class="important">
    <span><b>!!! IMPORTANT !!!</b><br />{message}</span>
</div>
<style>
    .important {
        background-color: rgba(var(--accent), 0.5);
        border-radius: 0.5rem;
        padding: 1rem;
        margin: 1rem 0;
        border: 1px solid rgba(var(--accent), 0.2);
        text-align: center;
        font-weight:500;
        font-family: monospace;
        color: #ffffff;
    }
</style>
